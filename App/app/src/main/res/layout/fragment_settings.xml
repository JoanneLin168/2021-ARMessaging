<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.settings.SettingsFragment"
    tools:visibility="visible">


        <TextView
            android:id="@+id/text_Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Settings"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/text_General"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_General"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/text_TextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Settings" />

        <TextView
            android:id="@+id/text_TextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Size"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_General"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"/>


        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="289dp"
            android:layout_height="24dp"
            android:max="3"
            android:progress="0"
            app:layout_constraintBottom_toTopOf="@+id/switch_DarkMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_TextSize" />

        <Switch
            android:id="@+id/switch_DarkMode"
            android:layout_width="400dp"
            android:layout_height="20dp"
            android:text="Dark Mode"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_NotificationSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <TextView
            android:id="@+id/text_NotificationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/switch_Notification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomof="@+id/switch_DarkMode" />


        <Switch
            android:id="@+id/switch_Notification"
            android:layout_width="400dp"
            android:layout_height="20dp"
            android:text="Push Notifications"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_Privacy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomof="@+id/text_NotificationSettings" />


        <TextView
            android:id="@+id/text_Privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/text_RefreshLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_Notification" />

        <TextView
            android:id="@+id/text_RefreshLocation"
            android:layout_width="218dp"
            android:layout_height="26dp"
            android:text="Refresh Your Location"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_HelpnFeedback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Privacy" />

        <SeekBar
            android:id="@+id/seekBar_LocationRefresh"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="289dp"
            android:layout_height="24dp"
            android:max="5"
            android:progress="3"
            app:layout_constraintBottom_toTopOf="@+id/text_HelpnFeedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_RefreshLocation" />

        <TextView
            android:id="@+id/text_HelpnFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help and Feedback"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_LocationRefresh" />




</androidx.constraintlayout.widget.ConstraintLayout>